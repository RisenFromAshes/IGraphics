{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "command": "bash",
            "args": [
                "./build_debug.sh",
                "\"${workspaceFolder}\"",
                "\"${relativeFileDirname}\"",
                "\"${relativeFile}\"",
                "${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "label": "C++: iGraphics Build",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "command": "bash",
            "args": [
                "./build_release.sh",
                "\"${workspaceFolder}\"",
                "\"${relativeFileDirname}\"",
                "\"${relativeFile}\"",
                "${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "label": "C++: iGraphics Release",
            "group": "build"
        }
    ]
}